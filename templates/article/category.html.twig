{% extends 'base.html.twig' %}

{% block title %}Hello to ARBlog!
{% endblock %}

{% block body %}


	<main
		role="main">

		<!-- Main jumbotron for a primary marketing message or call to action -->

		<div
			class="container-fluid">
			<!-- Example row of columns -->
			<div class="row">
				{% for article in articles %}
					<div class="col-md-4">
						<p class="date">Edite le
							{{ article.createdAt | date ("d/m/Y")}}
							a
							{{ article.createdAt | date ("H:i")}}
							par
							{{ article.author }}
						</p>
						<img class="card-img-top" src="/assets/blog/images/articles/{{ article.image }}" alt="{{ article.title }}">
						<h2>{{ article.title }}</h2>

						<p>
							<a class="btn btn-secondary" href="{{path('article_show',{id:article.id})}}" role="button">En Savoir plus</a>
						</p>
					</div>
				{% endfor %}
			</div>
			
			<hr>

		</div>
		<!-- /container -->

	</main>
	
{% endblock %}

