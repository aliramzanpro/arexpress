{% extends 'base.html.twig' %}

{% block title %}Hello HomeC{% endblock %}

{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-8">
                        <h2 style="text-align: center">Nos derniers articles</h2>

                            <div class="col-md-8">
                                <div class="row">
                                {% for article in articles %}
                                    <div class="col-md-4">

                                <p class="date">Edite le
                                    {{ article.createdAt | date ("d/m/Y")}}
                                    a
                                    {{ article.createdAt | date ("H:i")}}
                                    par
                                    {{ article.author }}
                                </p>
                                <img class="card-img-top" src="/assets/blog/images/articles/{{ article.image }}" alt="{{ article.title }}">
                                <h2>{{ article.title }}</h2>

                                <p>
                                    <a class="btn btn-secondary" href="{{path('article_show',{id:article.id})}}" role="button">En Savoir plus</a>
                                </p>
                                </div>
                                {% endfor %}
                                </div>
                            </div>

                    </div>
                    <div class="col-md-4">
                        <h2 class="container" style="text-align: center">Categories</h2>
                        <ol class="list-group list-group-numbered">
                            {% for category in categories %}
                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold">
                                        <a href="{{path('article_category',{id:category.id})}}">{{ category.title }}</a></div>
                                    {{ category.description | raw }}
                                </div>

                                <span class="badge bg-primary rounded-pill">{{ category.articles | length }}</span>
                                {% endfor %}
                            </li>
                        </ol>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
